<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_task_path %>
<p><%= @task.details %></p>
<p>
  <input type="checkbox" id="<%= @task.id %>" name="<%= @task.title %>" <%= @task.completed ? "checked" : "" %>/>
  <label for="<%= @task.id %>">The Task is <%= @task.completed ? "" : "not " %>completed!</label>
</p>
<%= link_to "back to the Tasks", tasks_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
