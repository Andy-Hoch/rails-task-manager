<h1>My Tasks</h1>
  <% @tasks.each do | task | %>
    <p>
      <input type="checkbox" id="<%= task.id %>" name="<%= task.title %>" <%= task.completed ? "checked" : "" %>/>
      <label for="<%= task.id %>"><%= link_to task.title, task_path(task) %> <%= link_to " 🗑️",
  destroy_task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></label>
    </p>
  <% end %>
<p><%= link_to "+ New Task", new_task_path %></p>
